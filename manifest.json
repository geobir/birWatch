{
  "name": "BirWatch",
  "version": "0.1",
  "description": "To be able to watch movie and video from internet simultaneously.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background/lib/RTCMultiConnection.min.js",
      "background/lib/socket.io.js",
      "background/background.js",
      "background/webRTC.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "page_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "media/logo_16.png",
      "32": "media/logo_32.png",
      "48": "media/logo_64.png",
      "128": "media/logo_128.png"
    }
  },
  "icons": {
    "16": "media/logo_16.png",
    "32": "media/logo_32.png",
    "48": "media/logo_64.png",
    "128": "media/logo_128.png"
  },
  "minimum_chrome_version":"34",
  "manifest_version": 2
}